  },
  "homepage": "https://github.com/MTU-2019-Fall-CS3141-4711/Project#readme",
  "dependencies": {},
  "devDependencies": {
    "copyfiles": "^2.1.1",
    "replace-in-files-cli": "^0.3.0",
    "less": "^3.10.3",
    "less-watch-compiler": "^1.14.1",
    "mithril": "^2.0.4",
    "mithril-query": "^3.0.1",
    "nyc": "^14.1.1",
    "ospec": "^4.0.1",
    "webpack": "^4.41.0",
    "webpack-cli": "^3.3.9"
  },
  "scripts": {
    "dev-web-start": "webpack js/router.js --output bin/app.js -d --watch --devtool source-map",
    "dev-less-start": "less-watch-compiler style/ . style.less",
    "build": "npm run-script build-web; npm run-script build-less",
    "build-web": "webpack js/router.js --output bin/app.js -p --devtool source-map",
    "build-less": "lessc style/style.less style.css",
    "build-index": "copyfiles index.html bin/; replace-in-files --string='./bin/app.js' --replacement='./app.js' bin/index.html",
    "deploy": "npm run build; npm run-script build-index; copyfiles style.css bin/",
    "test": "mocha --recursive --file test/test-setup.js",
    "test-coverage": "nyc mocha --recursive"
  },
  "nyc":{
  "all": true,
  "include":[
      "js/*"
  ]
}
}
